{
    "extends": "./tsconfig.base.json",
    "compilerOptions": {
        "outDir": "./dist",
        "target": "es2019",
        "module": "ESNext",
        "moduleResolution": "node",
        "lib": ["es2019", "dom"],
        "types": ["node"],
        "declaration": false,
        "esModuleInterop": true,
        "resolveJsonModule": true
    },
    "exclude": [
        "node_modules",
        "**/__mocks__"
    ],
    "files": [
        "./src/types/hbs.d.ts"
    ],
    "include": [
        "./src/**/*.ts",
        "rollup.config.ts",
        "rollup.dts.config.ts"
    ]
}
